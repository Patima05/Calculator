<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shape">ring</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="inputTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents">
        <item name="backgroundTint">@color/cardview_light_background</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">
        <item name="backgroundTint">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    </resources>