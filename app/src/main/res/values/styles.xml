<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorTitle</item>
    </style>

    <style name="AppThemeNight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#e91e63</item>
        <item name="colorPrimaryDark">#b0003a</item>
        <item name="colorAccent">#ff6090</item>
        <item name="android:textColor">@color/textColorTitle</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shape">ring</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="inputTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">48dp</item>
    </style>



    </resources>